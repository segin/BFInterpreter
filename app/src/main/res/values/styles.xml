<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- <item name="android:actionBarStyle">@style/BFTheme.ActionBar</item> -->
        <item name="actionBarStyle">@style/BFTheme.ActionBar</item>
        <item name="colorPrimary">@color/logo</item>
        <item name="colorPrimaryDark">@color/logoDark</item>
    </style>

    <style name="BFTheme.ActionBar" parent="Base.Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/BFTheme.ActionBar.TitleTextStyle</item>
        <item name="titleTextStyle">@style/BFTheme.ActionBar.TitleTextStyle</item>
        <item name="background">@color/logo</item>
    </style>

    <style name="BFTheme.ActionBar.TitleTextStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
